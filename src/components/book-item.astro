---
import { getRelativeLocaleUrl } from "astro:i18n";
import type { Book } from "../models/book";
import { getLocale } from "../utils/locale";
import { translations } from "../constants/translations";

interface Props {
  book: Book;
}

const { book } = Astro.props;
const locale = getLocale(Astro);
---

<a class="book" href={getRelativeLocaleUrl(locale, book.slug)}>
  <div class="content">
    <h3 class="title">{book.full_title[locale]}</h3>
    <p>{translations[locale].pages}: {book.pages.length}</p>
  </div>
  <img class="thumbnail" src={`/${book.slug}.webp`} />
</a>

<style>
  .book {
    width: 100%;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: flex-end;
    aspect-ratio: 1 / 1;
    color: white;
    overflow: hidden;
    border-radius: 16px;
    text-decoration: none;
  }

  .book::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0) 40%,
      rgba(0, 0, 0, 0.7) 100%
    );
    z-index: 0;
  }

  .content {
    width: 100%;
    z-index: 1;
    padding: 24px 24px;
  }

  .title {
    font-size: 24px;
  }

  .thumbnail {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    object-fit: cover;
    z-index: -1;
  }
</style>
